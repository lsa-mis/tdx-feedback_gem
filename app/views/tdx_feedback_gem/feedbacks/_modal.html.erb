<div class="tdx-feedback-modal" id="tdx-feedback-modal" style="display: none;"
     data-controller="tdx-feedback"
     data-tdx-feedback-target="modal">
  <div class="tdx-feedback-modal-overlay" id="tdx-feedback-modal-overlay"
       data-tdx-feedback-target="overlay"
       data-action="click->tdx-feedback#closeOnOverlayClick"></div>

  <div class="tdx-feedback-modal-content">
    <div class="tdx-feedback-modal-header">
      <h3>Send Feedback</h3>
      <button type="button" class="tdx-feedback-modal-close" id="tdx-feedback-modal-close"
              data-tdx-feedback-target="closeButton"
              data-action="click->tdx-feedback#close">&times;</button>
    </div>

    <div class="tdx-feedback-modal-body">
      <%= render 'form', feedback: feedback %>
    </div>
  </div>
</div>
